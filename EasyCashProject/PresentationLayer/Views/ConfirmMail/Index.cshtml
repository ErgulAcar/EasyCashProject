@model ConfirmMailViewModel
@{
    ViewData["Title"] = "Index";
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />
    <form method="post">

        <h2> Taşınan Mail Adresi @ViewBag.v </h2>
        <br />
        <label> Kullanıcı Id Değeri </label>
        <br />
        <input type="text" class="from-control" asp-for="Mail" value="@ViewBag.v"/>
        <br />
        <br />
        <label> Mail Adresinize gelen 6 haneli kodu giriniz </label>
        <br />
        <input type="text" asp-for="ConfirmCode" class="from-control" />
        <br />
        <br />
        <button class="btn btn-primary"> hesabu aktifleştir </button>

    </form>
</div>

